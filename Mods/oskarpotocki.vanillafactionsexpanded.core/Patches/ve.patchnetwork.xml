<?xml version="1.0" encoding="utf-8" ?>
<Patch>

	<Operation Class="PatchOperationFindMod">
        <mods>
            <li>Ancient hydroponic farm facilities</li>
        </mods>
        <match Class="PatchOperationSequence">
            <operations>
                <li Class="PatchOperationAdd">
                    <xpath>Defs/ThingDef[defName="WNA_Conduit" or @Name="WNA_WallWithConduit"]/comps</xpath>
                    <value>
                        <li Class="PipeSystem.CompProperties_Resource">
        			        <pipeNet>BreadMo_NutrientNetwork</pipeNet>
      			        </li>
                    </value>
                </li>
                <li Class="PatchOperationAdd">
                    <xpath>Defs/ThingDef[defName="WNA_BasicCrate"]/comps</xpath>
                    <value>
                        <li Class="PipeSystem.CompProperties_ResourceStorage">
                            <pipeNet>BreadMo_NutrientNetwork</pipeNet>
                            <storageCapacity>1000000</storageCapacity>
                            <drawStorageBar>false</drawStorageBar>
                            <margin>0.025</margin>
                            <contentRequirePower>false</contentRequirePower>
                        </li>
                    </value>
                </li>
            </operations>
        </match>
	</Operation>

	<Operation Class="PatchOperationFindMod">
        <mods>
            <li>Vanilla Nutrient Paste Expanded</li>
        </mods>
        <match Class="PatchOperationSequence">
            <operations>
                <li Class="PatchOperationAdd">
                    <xpath>Defs/ThingDef[defName="WNA_Conduit" or @Name="WNA_WallWithConduit"]/comps</xpath>
                    <value>
                        <li Class="PipeSystem.CompProperties_Resource">
        			        <pipeNet>VNPE_NutrientPasteNet</pipeNet>
      			        </li>
                    </value>
                </li>
                <li Class="PatchOperationAdd">
                    <xpath>Defs/ThingDef[defName="WNA_BasicCrate"]/comps</xpath>
                    <value>
                        <li Class="PipeSystem.CompProperties_ResourceStorage">
                            <pipeNet>VNPE_NutrientPasteNet</pipeNet>
                            <storageCapacity>1000000</storageCapacity>
                            <drawStorageBar>false</drawStorageBar>
                            <margin>0.025</margin>
                            <contentRequirePower>false</contentRequirePower>
                        </li>
                    </value>
                </li>
            </operations>
        </match>
	</Operation>

	<Operation Class="PatchOperationFindMod">
        <mods>
            <li>Vanilla Temperature Expanded</li>
        </mods>
        <match Class="PatchOperationSequence">
            <operations>
                <li Class="PatchOperationAdd">
                    <xpath>Defs/ThingDef[defName="WNA_Conduit" or @Name="WNA_WallWithConduit"]/comps</xpath>
                    <value>
                        <li Class="PipeSystem.CompProperties_Resource">
        			        <pipeNet>VTE_EfficiencyNet</pipeNet>
      			        </li>
                    </value>
                </li>
            </operations>
        </match>
	</Operation>

</Patch>