<?xml version="1.0" encoding="utf-8" ?>
<Defs>
    <ThingDef ParentName="HoldingPlatformBase">
		<defName>WNA_HoldingPlatform</defName>
		<label>voidmetal platform</label>
		<description>A platform made of voidmetal, for holding anomaly entities.</description>
		<graphicData>
			<texPath>Things/Building/HoldingPlatform/HoldingPlatform</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<drawSize>(1,1)</drawSize>
			<color>(65,60,60,192)</color>
		</graphicData>
        <useHitPoints>false</useHitPoints>
        <size>(1,1)</size>
        <statBases>
            <Mass>15</Mass>
			<WorkToBuild>2000</WorkToBuild>
            <MeditationFocusStrength>1</MeditationFocusStrength>
            <Flammability>0</Flammability>
            <ContainmentStrength>100000</ContainmentStrength>
        </statBases>
        <costList>
            <WNA_Voidsteel>15</WNA_Voidsteel>
        </costList>
        <comps Inherit="False">
            <li Class="CompProperties_AffectedByFacilities">
                <linkableFacilities>
                    <li>Electroharvester</li>
                    <li>ElectricInhibitor</li>
                    <li>ShardInhibitor</li>
                    <li>BioferriteHarvester</li>
                </linkableFacilities>
            </li>
            <li Class="CompProperties_MeditationFocus">
                <statDef>MeditationFocusStrength</statDef>
                <focusTypes>
                    <li>Void</li>
                </focusTypes>
                <offsets>
                    <li Class="FocusStrengthOffset_OccupiedHoldingPlatform">
                        <offset>1</offset>
                    </li>
                </offsets>
            </li>
            <li Class="CompProperties_EntityHolderPlatform">
                <containmentFactor>10</containmentFactor>
                <untetheredGraphicTexPath>inv</untetheredGraphicTexPath>
                <tilingChainTexPath>inv</tilingChainTexPath>
                <baseChainFastenerTexPath>inv</baseChainFastenerTexPath>
                <targetChainFastenerTexPath>inv</targetChainFastenerTexPath>
            </li>
            <li Class="CompProperties_AttachPoints">
                <points>
                    <li>
                        <offset>(0, 0, 0)</offset>
                        <type>CableConnection0</type>
                    </li>
                    <li>
                        <offset>(0, 0, 0)</offset>
                        <type>CableConnection1</type>
                    </li>
                    <li>
                        <offset>(0, 0, 0)</offset>
                        <type>CableConnection2</type>
                    </li>
                    <li>
                        <offset>(0, 0, 0)</offset>
                        <type>CableConnection3</type>
                    </li>
                    <li>
                        <offset>(-1.32, 0, 1.3)</offset>
                        <type>PlatformRestraint0</type>
                    </li>
                    <li>
                        <offset>(1.32, 0, 1.3)</offset>
                        <type>PlatformRestraint1</type>
                    </li>
                    <li>
                        <offset>(1.32, 0, -1.3)</offset>
                        <type>PlatformRestraint2</type>
                    </li>
                    <li>
                        <offset>(-1.32, 0, -1.3)</offset>
                        <type>PlatformRestraint3</type>
                    </li>
                </points>
            </li>
        </comps>
	</ThingDef>
</Defs>