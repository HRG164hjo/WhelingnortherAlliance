<?xml version="1.0" encoding="utf-8" ?>
<Patch>
    <Operation Class="PatchOperationConditional">
        <xpath>Defs/BiomeDef/allowedPackAnimals</xpath>
        <match Class="PatchOperationAdd">
            <xpath>Defs/BiomeDef/allowedPackAnimals</xpath>
            <value>
                <li>WNA_DimBoo</li>
                <li>WNA_FerosBoo</li>
                <li>WNA_ThornBoo</li>
            </value>
        </match>
    </Operation>
    <Operation Class="PatchOperationAdd">
        <xpath>Defs/ResearchProjectDef[defName!="BasicMechtech"]/heldByFactionCategoryTags</xpath>
        <value>
            <li>WNA_FactionWNA</li>
        </value>
    </Operation>
    
    <Operation Class="PatchOperationConditional">
        <xpath>Defs/StatDef[@Name="ArmorRatingBase"]/maxValue</xpath>
        <match Class="PatchOperationRemove">
            <xpath>Defs/StatDef[@Name="ArmorRatingBase"]/maxValue</xpath>
        </match>
    </Operation>
    
    <Operation Class="PatchOperationInsert">
        <xpath>Defs/ThingDef[comps]/comps/li[@Class="CompProperties_AffectedByFacilities"]/linkableFacilities/li[text()="ToolCabinet"]</xpath>
        <order>Append</order>
        <value>
            <li>WNA_AssistCabinet</li>
            <li>WNA_Duplicator</li>
        </value>
    </Operation>
    <Operation Class="PatchOperationConditional">
        <xpath>Defs/ThingDef[defName="FueledStove" or defName="ElectricStove" or defName="Brewery"]/comps/li[@Class="CompProperties_AffectedByFacilities"]</xpath>
        <match Class="PatchOperationAdd">
            <xpath>Defs/ThingDef[defName="FueledStove" or defName="ElectricStove" or defName="Brewery"]/comps/li[@Class="CompProperties_AffectedByFacilities"]/linkableFacilities</xpath>
            <value>
                <li>WNA_AssistCabinet</li>
                <li>WNA_Duplicator</li>
            </value>
        </match>
        <nomatch Class="PatchOperationAdd">
            <xpath>Defs/ThingDef[defName="FueledStove" or defName="ElectricStove" or defName="Brewery"]/comps</xpath>
            <value>
                <li Class="CompProperties_AffectedByFacilities">
                    <linkableFacilities>
                        <li>WNA_AssistCabinet</li>
                        <li>WNA_Duplicator</li>
                    </linkableFacilities>
                </li>
            </value>
        </nomatch>
    </Operation>
    
    <Operation Class="PatchOperationAdd">
        <xpath>Defs/ThingDef[defName="ChunkMechanoidSlag"]</xpath>
        <value>
            <smeltable>true</smeltable>
            <smeltProducts>
                <Steel>15</Steel>
                <Plasteel>5</Plasteel>
                <Silver>10</Silver>
            </smeltProducts>
        </value>
    </Operation>
    
    <Operation Class="PatchOperationRemove">
        <xpath>Defs/ThingDef[@ParentName="MechSerumBase"]/tradeability</xpath>
    </Operation>

    <!--<Operation Class="PatchOperationAdd">
        <xpath>Defs/RoofDef[defName="RoofConstructed"]</xpath>
        <value>
            <canCollapse>false</canCollapse>
        </value>
    </Operation>-->
</Patch>