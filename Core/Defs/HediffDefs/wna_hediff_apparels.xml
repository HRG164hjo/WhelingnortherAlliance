<?xml version="1.0" encoding="utf-8" ?>
<Defs>
    <HediffDef>
        <defName>WNA_RobeBoost</defName>
        <label>robe boost</label>
        <hediffClass>HediffWithComps</hediffClass>
        <description>Special designs and techniques in alliance robe is helping this pawn performing better than normal.</description>
        <defaultLabelColor>(0,0,0)</defaultLabelColor>
        <everCurableByItem>false</everCurableByItem>
        <isBad>false</isBad>
        <comps>
            <li Class="HediffCompProperties_RemoveIfApparelDropped"/>
			<li Class="VEF.AnimalBehaviours.HediffCompProperties_Floating" MayRequire="oskarpotocki.vanillafactionsexpanded.core"/>
        </comps>
        <stages>
            <li>
                <capMods>
                    <li>
                        <capacity>Consciousness</capacity>
                        <postFactor>20</postFactor>
                    </li>
                    <li>
                        <capacity>Moving</capacity>
                        <postFactor>20</postFactor>
                    </li>
                    <li>
                        <capacity>Manipulation</capacity>
                        <postFactor>20</postFactor>
                    </li>
                    <li>
                        <capacity>Sight</capacity>
                        <postFactor>20</postFactor>
                    </li>
                    <li>
                        <capacity>Hearing</capacity>
                        <postFactor>20</postFactor>
                    </li>
                    <li>
                        <capacity>Breathing</capacity>
                        <postFactor>20</postFactor>
                    </li>
                    <li>
                        <capacity>BloodFiltration</capacity>
                        <postFactor>20</postFactor>
                    </li>
                    <li>
                        <capacity>BloodPumping</capacity>
                        <postFactor>20</postFactor>
                    </li>
                    <li>
                        <capacity>Metabolism</capacity>
                        <postFactor>20</postFactor>
                    </li>
                </capMods>
                <statFactors>
                    <Flammability>0</Flammability>
                    <MeleeDamageFactor>5</MeleeDamageFactor>
                    <MeleeCooldownFactor>0.01</MeleeCooldownFactor>
                </statFactors>
            </li>
        </stages>
		<modExtensions>
			<li Class="PathfindingFramework.MovementExtension" MayRequire="pathfinding.framework">
				<movementDef>WNA_Movement</movementDef>
			</li>
		</modExtensions>
    </HediffDef>
