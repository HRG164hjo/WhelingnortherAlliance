<?xml version="1.0" encoding="utf-8" ?>
<Defs>
    <HediffDef>
        <defName>WNA_Inhuman</defName>
        <label>inhuman</label>
        <hediffClass>HediffWithComps</hediffClass>
        <description>This thing is a creation by some dark power reached from a far far away origin. It may used to be a human, and it may still similar to human in many ways, but it is actually no longer human.</description>
        <defaultLabelColor>(0,0,0)</defaultLabelColor>
        <makesAlert>false</makesAlert>
        <everCurableByItem>false</everCurableByItem>
        <duplicationAllowed>false</duplicationAllowed>
        <isBad>false</isBad>
        <keepOnBodyPartRestoration>true</keepOnBodyPartRestoration>
        <preventsPregnancy>true</preventsPregnancy>
        <preventsLungRot>true</preventsLungRot>
        <preventsDeath>true</preventsDeath>
        <allowMothballIfLowPriorityWorldPawn>true</allowMothballIfLowPriorityWorldPawn>
        <allowedMeditationFocusTypes>
          <li>Void</li>
        </allowedMeditationFocusTypes>
        <aptitudes>
            <Shooting>9999</Shooting>
            <Melee>9999</Melee>
            <Construction>9999</Construction>
            <Mining>9999</Mining>
            <Cooking>9999</Cooking>
            <Plants>9999</Plants>
            <Animals>9999</Animals>
            <Crafting>9999</Crafting>
            <Artistic>9999</Artistic>
            <Medicine>9999</Medicine>
            <Social>9999</Social>
            <Intellectual>9999</Intellectual>
        </aptitudes>
        <stages>
            <li>
                <painFactor>0</painFactor>
                <totalBleedFactor>0</totalBleedFactor>
                <opinionOfOthersFactor>0</opinionOfOthersFactor>
                <socialFightChanceFactor>0</socialFightChanceFactor>
                <foodPoisoningChanceFactor>0</foodPoisoningChanceFactor>
                <forgetMemoryThoughtMtbDays>0</forgetMemoryThoughtMtbDays>
                <severityGainFactor>0</severityGainFactor>
                <blocksMentalBreaks>true</blocksMentalBreaks>
                <blocksInspirations>true</blocksInspirations>
                <pctAllThoughtNullification>1</pctAllThoughtNullification>
                <overrideMoodBase>1</overrideMoodBase>
                <regeneration>999999999</regeneration>
                <showRegenerationStat>false</showRegenerationStat>
                <disablesNeeds>
                    <li>Beauty</li>
                    <li>Comfort</li>
                    <li>Outdoors</li>
                    <li>Indoors</li>
                    <li>DrugDesire</li>
                    <li>RoomSize</li>
                    <li>Rest</li>
                    <li>Mood</li>
                    <li>Food</li>
                    <li>Joy</li>
                    <li MayRequire="telardo.romanceontherim">RomanceOnTheRim_Need_Romance</li>
                    <li MayRequire="rim.job.world">Sex</li>
                </disablesNeeds>
            </li>
        </stages>
        <comps>
            <li Class="WNA.HediffCompProp.CompPostRemoveHediff">
                <hediff>WNA_Inhuman</hediff>
            </li>
        </comps>
    </HediffDef>

    <HediffDef>
        <defName>WNA_InAnimal</defName>
        <label>abnormal creation</label>
        <hediffClass>HediffWithComps</hediffClass>
        <description>This thing is formed through some ways that hardly known and hardly understandable. Due to it's very different origin from other things, it doesn't need to eat like normal creatures.</description>
        <defaultLabelColor>(0,0,0)</defaultLabelColor>
        <everCurableByItem>false</everCurableByItem>
        <duplicationAllowed>false</duplicationAllowed>
        <isBad>false</isBad>
        <keepOnBodyPartRestoration>True</keepOnBodyPartRestoration>
        <stages>
            <li>
                <blocksMentalBreaks>true</blocksMentalBreaks>
                <showRegenerationStat>false</showRegenerationStat>
                <regeneration>999999999</regeneration>
                <disablesNeeds>
                    <li>Food</li>
                </disablesNeeds>
            </li>
        </stages>
        <comps>
            <li Class="WNA.HediffCompProp.CompHealPermaWounds"/>
            <li Class="WNA.HediffCompProp.CompPostRemoveHediff">
                <hediff>WNA_InAnimal</hediff>
            </li>
        </comps>
    </HediffDef>

    <HediffDef>
        <defName>WNA_InMechanoid</defName>
        <label>abnormal automation</label>
        <hediffClass>HediffWithComps</hediffClass>
        <description>This mechanoid is designed or enhanced by some unique techniques of WNA.</description>
        <defaultLabelColor>(0,0,0)</defaultLabelColor>
        <makesAlert>false</makesAlert>
        <everCurableByItem>false</everCurableByItem>
        <isBad>false</isBad>
        <keepOnBodyPartRestoration>true</keepOnBodyPartRestoration>
        <allowMothballIfLowPriorityWorldPawn>true</allowMothballIfLowPriorityWorldPawn>
        <stages>
            <li>
                <statFactors>
                    <AimingDelayFactor>0</AimingDelayFactor>
                    <BandwidthCost>0</BandwidthCost>
                    <CleaningSpeed>20</CleaningSpeed>
                    <ControlTakingTime>0.01</ControlTakingTime>
                    <FoodPoisonChance>0</FoodPoisonChance>
                    <GeneralLaborSpeed>20</GeneralLaborSpeed>
                    <IncomingDamageFactor>0</IncomingDamageFactor>
                    <MechEnergyLossPerHP>0</MechEnergyLossPerHP>
                    <MedicalTendSpeed>20</MedicalTendSpeed>
                    <MedicalOperationSpeed>20</MedicalOperationSpeed>
                    <MoveSpeed>20</MoveSpeed>
                    <RangedCooldownFactor>0.01</RangedCooldownFactor>
                    <WorkSpeedGlobal>20</WorkSpeedGlobal>
                    <MeleeCooldownFactor>0</MeleeCooldownFactor>
                    <MeleeDodgeChance>20</MeleeDodgeChance>
                    <WorkSpeedGlobal>20</WorkSpeedGlobal>
                    <FishingSpeed MayRequire="ludeon.rimworld.odyssey">20</FishingSpeed>
                    <!--<FishingYield MayRequire="ludeon.rimworld.odyssey">20</FishingYield>-->
                </statFactors>
                <statOffsets>
                    <CarryingCapacity>100000</CarryingCapacity>
                    <EMPResistance>20</EMPResistance>
                    <EnergyShieldRechargeRate>50</EnergyShieldRechargeRate>
                    <EnergyShieldEnergyMax>50</EnergyShieldEnergyMax>
                    <EMPResistance MayRequireAnyOf="Ludeon.RimWorld.Biotech,Ludeon.RimWorld.Anomaly">100</EMPResistance>
                </statOffsets>
                <capMods>
                    <li>
                        <capacity>Consciousness</capacity>
                        <postFactor>20</postFactor>
                    </li>
                    <li>
                        <capacity>Moving</capacity>
                        <postFactor>20</postFactor>
                    </li>
                    <li>
                        <capacity>Manipulation</capacity>
                        <postFactor>20</postFactor>
                    </li>
                    <li>
                        <capacity>Sight</capacity>
                        <postFactor>20</postFactor>
                    </li>
                    <li>
                        <capacity>Hearing</capacity>
                        <postFactor>20</postFactor>
                    </li>
                    <li>
                        <capacity>Breathing</capacity>
                        <postFactor>20</postFactor>
                    </li>
                    <li>
                        <capacity>BloodFiltration</capacity>
                        <postFactor>20</postFactor>
                    </li>
                    <li>
                        <capacity>BloodPumping</capacity>
                        <postFactor>20</postFactor>
                    </li>
                    <li>
                        <capacity>Metabolism</capacity>
                        <postFactor>20</postFactor>
                    </li>
                </capMods>
            </li>
        </stages>
        <comps>
            <li Class="WNA.HediffCompProp.CompMechAutoHeal">
                <repairInterval>27</repairInterval>
            </li>
            <li Class="WNA.HediffCompProp.CompPostRemoveHediff">
                <hediff>WNA_InMechanoid</hediff>
            </li>
            <li Class="WNA.HediffCompProp.CompHediffHediffRemover"/>
        </comps>
		<modExtensions>
			<li Class="PathfindingFramework.MovementExtension" MayRequire="pathfinding.framework">
				<movementDef>WNA_Movement</movementDef>
			</li>
		</modExtensions>
    </HediffDef>

    <HediffDef>
        <defName>WNA_DeathRefusal</defName>
        <label>death refusal</label>
        <description>This pawn have witnessed Whelingnorther's control over death. Ripples of reality is altering their body and mind. If this pawn is killed and their corpse isn't destroyed, they'll be able to crawl back from death.</description>
        <hediffClass>WNA.HediffClass.DeathRefusal</hediffClass>
        <defaultLabelColor>(0,0,0)</defaultLabelColor>
        <everCurableByItem>false</everCurableByItem>
        <isBad>false</isBad>
        <showGizmosOnCorpse>true</showGizmosOnCorpse>
        <stages>
            <li>
                <socialFightChanceFactor>0</socialFightChanceFactor>
                <blocksMentalBreaks>true</blocksMentalBreaks>
                <pctAllThoughtNullification>1</pctAllThoughtNullification>
                <overrideMoodBase>1</overrideMoodBase>
                <showRegenerationStat>false</showRegenerationStat>
                <regeneration>60000</regeneration>
            </li>
        </stages>
        <comps>
            <li Class="WNA.HediffCompProp.CompPostRemoveHediff">
                <hediff>WNA_DeathRefusal</hediff>
            </li>
        </comps>
    </HediffDef>
    <HediffDef>
        <defName>sWNA_DeathRefusal</defName>
        <label>post death refusal</label>
        <hediffClass>HediffWithComps</hediffClass>
        <description>This pawn is back from death, for a short period of time the ripples of reality will keep this pawn free from many common harms. Note that this temperary instability of reality may cause some unexpected effects.</description>
        <defaultLabelColor>(0,0,0)</defaultLabelColor>
        <everCurableByItem>false</everCurableByItem>
        <isBad>false</isBad>
        <comps>
            <li Class="HediffCompProperties_Disappears">
                <disappearsAfterTicks>10000~20000</disappearsAfterTicks>
                <showRemainingTime>true</showRemainingTime>
            </li>
        </comps>
        <stages>
            <li>
                <statFactors>
                    <IncomingDamageFactor>0</IncomingDamageFactor>
                    <StaggerDurationFactor MayRequire="Ludeon.Rimworld.Biotech">0</StaggerDurationFactor>
                </statFactors>
            </li>
        </stages>
    </HediffDef>
</Defs>
