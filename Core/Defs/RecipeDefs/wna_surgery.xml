<?xml version="1.0" encoding="utf-8" ?>
<Defs>
    <RecipeDef>
        <defName>WNARecipeTo_WNA_Medikit</defName>
        <label>administer medicine pack</label>
        <description>Administer a WNA medicine pack.</description>
        <workerClass>Recipe_AdministerUsableItem</workerClass>
        <jobString>Administering medicine pack.</jobString>
        <targetsBodyPart>false</targetsBodyPart>
        <anesthetize>false</anesthetize>
        <isViolation>false</isViolation>
        <workAmount>60</workAmount>
        <dontShowIfAnyIngredientMissing>true</dontShowIfAnyIngredientMissing>
        <surgeryOutcomeEffect IsNull="True"/>
		<recipeUsers>
			<li>WNA_WNThan</li>
			<li>WNA_Human</li>
			<li>Human</li>
			<li MayRequire="ludeon.rimworld.anomaly">CreepJoiner</li>
		</recipeUsers>
        <ingredients>
            <li>
                <filter>
                    <thingDefs>
                        <li>WNA_Medikit</li>
                    </thingDefs>
                </filter>
                <count>1</count>
            </li>
        </ingredients>
        <fixedIngredientFilter>
            <thingDefs>
                <li>WNA_Medikit</li>
            </thingDefs>
        </fixedIngredientFilter>
    </RecipeDef>

    <RecipeDef ParentName="WNA_SurgeryBase">
        <defName>WNA_Inspection</defName>
        <label>psychic inspection</label>
        <description>Inspect target with one's psychic power, faster and no medicine is required. This technique requires basic level of intelligence.</description>
        <workerClass>WNA.Recipe.Inspection</workerClass>
        <jobString>Inspecting TargetA.</jobString>
        <hideBodyPartNames>true</hideBodyPartNames>
        <targetsBodyPart>false</targetsBodyPart>
        <uiIconPath>UI/Icons/SurgicalInspection</uiIconPath>
		<recipeUsers>
			<li>WNA_WNThan</li>
			<li>WNA_Human</li>
			<li>Human</li>
			<li MayRequire="ludeon.rimworld.anomaly">CreepJoiner</li>
		</recipeUsers>
        <skillRequirements>
            <Intellectual>4</Intellectual>
        </skillRequirements>
        <workAmount>60</workAmount>
        <researchPrerequisite>WNA_BasicRite</researchPrerequisite>
    </RecipeDef>
    
    <RecipeDef ParentName="WNA_SurgeryBase">
        <defName>WNA_VoidDive</defName>
        <label>void dive</label>
        <description>force a human into deep coma and turn them into a anchor. the victim must be sober to face the void, thus voidsteel can be drained through them while they're struggling to awake, to escape, or doing anything else, before their consciousness finally fades.</description>
        <workerClass>Recipe_AddHediff</workerClass>
        <jobString>Forcing void dive on TargetA.</jobString>
        <hideBodyPartNames>true</hideBodyPartNames>
        <targetsBodyPart>false</targetsBodyPart>
        <workAmount>300</workAmount>
        <ingredients>
            <li>
                <filter>
                    <categories>
                        <li>Medicine</li>
                    </categories>
                </filter>
                <count>2</count>
            </li>
        </ingredients>
        <fixedIngredientFilter>
            <categories>
                <li>Medicine</li>
            </categories>
        </fixedIngredientFilter>
        <addsHediff>WNA_VoidDiver</addsHediff>
    </RecipeDef>
</Defs>