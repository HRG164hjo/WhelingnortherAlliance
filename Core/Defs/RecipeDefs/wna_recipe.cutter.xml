<?xml version="1.0" encoding="utf-8" ?>
<Defs>
    <RecipeDef ParentName="WNA_RecipeBase">
        <defName>WNA_RiteBeastDivision</defName>
        <description>divide a corpse so that it can be used for more uses.</description>
        <jobString>working.</jobString>
        <label>divide a corpse</label>
        <ingredients>
            <li>
                <filter>
                    <categories>
                        <li>Corpses</li>
                    </categories>
                </filter>
                <count>1</count>
            </li>
        </ingredients>
        <fixedIngredientFilter>
            <categories>
                <li>Corpses</li>
            </categories>
        </fixedIngredientFilter>
        <specialProducts>
            <li>Butchery</li>
            <li>Smelted</li>
        </specialProducts>
        <workAmount>300</workAmount>
        <researchPrerequisite>WNA_BasicRite</researchPrerequisite>
    </RecipeDef>

    <RecipeDef ParentName="WNA_RecipeBase">
        <defName>WNA_RiteRebelStriving</defName>
        <description>break down a weapon or apparel and see if there's something can be recycled.</description>
        <jobString>working.</jobString>
        <label>break down a thing</label>
        <ingredients>
            <li>
                <filter>
                    <categories>
                        <li>Weapons</li>
                        <li>Apparel</li>
                    </categories>
                </filter>
                <count>1</count>
            </li>
        </ingredients>
        <fixedIngredientFilter>
            <categories>
                <li>Weapons</li>
                <li>Apparel</li>
            </categories>
        </fixedIngredientFilter>
        <specialProducts>
            <li>Butchery</li>
            <li>Smelted</li>
        </specialProducts>
        <workAmount>300</workAmount>
        <researchPrerequisite>WNA_BasicRite</researchPrerequisite>
    </RecipeDef>

    <RecipeDef ParentName="WNA_RecipeBase">
        <defName>WNA_RiteAbleting</defName>
        <description>break down slag chunks to retrieve useful things, more productive than traditional methods.</description>
        <jobString>working.</jobString>
        <label>rite ableting</label>
        <ingredients>
            <li>
                <filter>
                    <categories>
                        <li>Chunks</li>
                        <li>ChunkSlagSteel</li>
                        <li>ChunkMechanoidSlag</li>
                    </categories>
                </filter>
                <count>1</count>
            </li>
        </ingredients>
        <fixedIngredientFilter>
            <categories>
                <li>Chunks</li>
                <li>ChunkSlagSteel</li>
                <li>ChunkMechanoidSlag</li>
            </categories>
        </fixedIngredientFilter>
        <specialProducts>
            <li>Butchery</li>
            <li>Smelted</li>
        </specialProducts>
        <workAmount>300</workAmount>
        <researchPrerequisite>WNA_BasicRite</researchPrerequisite>
    </RecipeDef>

    <RecipeDef ParentName="WNA_RecipeBase" MayRequire="sarg.rimbees">
        <defName>WNA_RecipeAlphaBees</defName>
        <description>devide a comb (or a hive) for products.</description>
        <jobString>working.</jobString>
        <label>divide a comb</label>
        <ingredients>
            <li>
                <filter>
                    <thingDefs>
                        <li>RB_WildHive_Temperate</li>
                        <li>RB_WildHive_Mild</li>
                    </thingDefs>
					<categories>
						<li>RB_Combs</li>
					</categories>
                </filter>
                <count>1</count>
            </li>
        </ingredients>
        <fixedIngredientFilter>
            <thingDefs>
                <li>RB_WildHive_Temperate</li>
                <li>RB_WildHive_Mild</li>
            </thingDefs>
            <categories>
                <li>RB_Combs</li>
            </categories>
        </fixedIngredientFilter>
		<specialProducts>
			<li>Butchery</li>
            <li>Smelted</li>
		</specialProducts>
        <workAmount>300</workAmount>
        <researchPrerequisite>WNA_BasicRite</researchPrerequisite>
    </RecipeDef>

    <RecipeDef ParentName="WNA_RecipeBase" MayRequire="sarg.rimbees">
        <defName>WNA_RecipeAlphaBeesToo</defName>
        <description>produce kibble while getting rid of your never-needed bees.</description>
        <jobString>working.</jobString>
        <label>make kibble from bees</label>
        <ingredients>
            <li>
                <filter>
                    <categories>
						<li>RB_BeesAndQueens</li>
					</categories>
				</filter>
				<count>25</count>
            </li>
        </ingredients>
        <fixedIngredientFilter>
			<categories>
				<li>RB_BeesAndQueens</li>
			</categories>
        </fixedIngredientFilter>
		<products>
			<Kibble>50</Kibble>
		</products>
        <workAmount>150</workAmount>
        <researchPrerequisite>WNA_BasicRite</researchPrerequisite>
    </RecipeDef>

</Defs>