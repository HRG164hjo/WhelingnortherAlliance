<?xml version="1.0" encoding="utf-8" ?>
<Defs>
    <ThingDef ParentName="WNA_TurretBaseBase">
        <defName>WNA_Turret_Pale</defName>
        <label>pale ball</label>
        <description>A slab-like facility, can automatically form a mana ball and actively attack nearby enemies.</description>
		<graphicData>
			<texPath>buildings/security/wna_turret_a</texPath>
            <drawSize>1.2</drawSize>
            <drawOffset>(0,0,0.1)</drawOffset>
		</graphicData>
		<uiIconPath>buildings/security/wna_turret_a</uiIconPath>
        <size>(1,1)</size>
        <costList/>
        <building>
            <turretGunDef>WNA_Turret_Pale_Gun</turretGunDef>
            <turretBurstWarmupTime>0</turretBurstWarmupTime>
            <turretBurstCooldownTime>0.083333</turretBurstCooldownTime>
        </building>
        <researchPrerequisites>
            <li>WNA_SecretTech</li>
        </researchPrerequisites>
    </ThingDef>
    <ThingDef ParentName="WNA_TurrentWeaponBase">
        <defName>WNA_Turret_Pale_Gun</defName>
        <label>pale ball</label>
        <verbs>
            <li>
                <verbClass>WNA.WNAMiscs.VerbType_Laser</verbClass>
                <hasStandardCommand>true</hasStandardCommand>
                <defaultProjectile>WNA_Turret_Pale_Proj</defaultProjectile>
                <warmupTime>0</warmupTime>
                <range>99.9</range>
                <soundCast>Shot_NeedleGun</soundCast>
                <soundCastTail>GunTail_Heavy</soundCastTail>
                <muzzleFlashScale>18</muzzleFlashScale>
                <burstShotCount>3</burstShotCount>
                <ticksBetweenBurstShots>1</ticksBetweenBurstShots>
                <canGoWild>false</canGoWild>
                <requireLineOfSight>false</requireLineOfSight>
                <targetParams>
                    <canTargetLocations>false</canTargetLocations>
                    <canTargetBuildings>true</canTargetBuildings>
                    <canTargetAnimals>true</canTargetAnimals>
                    <canTargetMechs>true</canTargetMechs>
                </targetParams>
            </li>
        </verbs>
        <modExtensions>
            <li Class="WNA.DMExtension.TechnoConfig">
                <laserInnerColor>(0,0,0,200)</laserInnerColor>
                <laserOuterColor>(255,255,255,200)</laserOuterColor>
                <laserOuterSpread>1.5</laserOuterSpread>
                <laserThickness>0.05</laserThickness>
                <laserDuration>10</laserDuration>
            </li>
        </modExtensions>
    </ThingDef>
    <ThingDef ParentName="WNA_ProjBase">
        <defName>WNA_Turret_Pale_Proj</defName>
        <label>pale ball</label>
        <projectile>
            <damageDef>WNA_CastRange</damageDef>
            <damageAmountBase>150</damageAmountBase>
        </projectile>
    </ThingDef>

    <ThingDef ParentName="WNA_TurretBaseBase">
        <defName>WNA_Turret_Shatter</defName>
        <label>shatter ball</label>
        <description>A slab-like facility, can automatically form a mana ball and actively attack nearby enemies. It can cause an explosion and usually powerful enough to blow a person apart.</description>
		<graphicData>
			<texPath>buildings/security/wna_turret_b</texPath>
            <drawSize>2.8</drawSize>
            <drawOffset>(0,0,0.4)</drawOffset>
		</graphicData>
		<uiIconPath>buildings/security/wna_turret_b</uiIconPath>
        <size>(2,2)</size>
        <costList/>
        <building>
            <turretGunDef>WNA_Turret_Shatter_Gun</turretGunDef>
            <turretBurstWarmupTime>0</turretBurstWarmupTime>
            <turretBurstCooldownTime>1.333333</turretBurstCooldownTime>
        </building>
        <researchPrerequisites>
            <li>WNA_SecretTech</li>
        </researchPrerequisites>
    </ThingDef>
    <ThingDef ParentName="WNA_TurrentWeaponBase">
        <defName>WNA_Turret_Shatter_Gun</defName>
        <label>shatter ball</label>
        <verbs>
            <li>
                <defaultProjectile>WNA_Turret_Shatter_Proj</defaultProjectile>
                <verbClass>Verb_Shoot</verbClass>
                <hasStandardCommand>true</hasStandardCommand>
                <warmupTime>0</warmupTime>
                <range>199.9</range>
                <minRange>18.9</minRange>
                <burstShotCount>1</burstShotCount>
                <soundCast>Shot_NeedleGun</soundCast>
                <soundCastTail>GunTail_Heavy</soundCastTail>
                <muzzleFlashScale>18</muzzleFlashScale>
                <ticksBetweenBurstShots>2</ticksBetweenBurstShots>
                <canGoWild>false</canGoWild>
                <forcedMissRadius>1</forcedMissRadius>
                <requireLineOfSight>false</requireLineOfSight>
                <targetParams>
                    <canTargetLocations>false</canTargetLocations>
                    <canTargetBuildings>true</canTargetBuildings>
                    <canTargetAnimals>true</canTargetAnimals>
                    <canTargetMechs>true</canTargetMechs>
                </targetParams>
            </li>
        </verbs>
    </ThingDef>
    <ThingDef ParentName="WNA_ProjBase">
        <defName>WNA_Turret_Shatter_Proj</defName>
        <label>shatter ball</label>
        <thingClass>Projectile_Explosive</thingClass>
        <projectile>
            <damageDef>WNA_CastBomb</damageDef>
            <damageAmountBase>1250</damageAmountBase>
            <explosionRadius>9.9</explosionRadius>
            <soundExplode>Explosion_GiantBomb</soundExplode>
            <flyOverhead>true</flyOverhead>
        </projectile>
    </ThingDef>
</Defs>