<?xml version="1.0" encoding="utf-8" ?>
<Defs>
    <ThingDef ParentName="WNA_FurnitureBase" Name="WNA_RiteSiteBase">
        <defName>WNA_Ritespot</defName>
        <label>ritespot</label>
        <description>A rite spot.</description>
        <thingClass>Building_WorkTable</thingClass>
        <graphicData>
            <texPath>rite/rite_base</texPath>
            <graphicClass>Graphic_Single</graphicClass>
            <drawSize>(1,1)</drawSize>
            <color>(200,200,200,192)</color>
        </graphicData>
        <altitudeLayer>FloorEmplacement</altitudeLayer>
        <researchPrerequisites>
            <li>WNA_WhelingnortherApocalypse</li>
        </researchPrerequisites>
        <passability>Standable</passability>
        <statBases>
            <Flammability>0</Flammability>
            <Mass>0</Mass>
            <WorkToBuild>0</WorkToBuild>
        </statBases>
        <building>
            <spawnedConceptLearnOpportunity>BillsTab</spawnedConceptLearnOpportunity>
            <canPlaceOverImpassablePlant>false</canPlaceOverImpassablePlant>
            <ai_chillDestination>false</ai_chillDestination>
            <artificialForMeditationPurposes>true</artificialForMeditationPurposes>
            <buildingTags>
                <li>Production</li>
            </buildingTags>
        </building>
        <hasInteractionCell>True</hasInteractionCell>
        <interactionCellOffset>(0,0,0)</interactionCellOffset>
        <surfaceType>Item</surfaceType>
        <inspectorTabs>
            <li>ITab_Bills</li>
        </inspectorTabs>
        <comps>
            <li Class="CompProperties_Forbiddable"/>
        </comps>
        <placeWorkers>
            <li>PlaceWorker_ReportWorkSpeedPenalties</li>
        </placeWorkers>
    </ThingDef>

    <ThingDef ParentName="WNA_RiteSiteBase">
        <defName>WNA_RiteSpot_Cutter</defName>
        <label>ritespot</label>
        <description>A rite spot.</description>
        <graphicData>
            <texPath>rite/rite_cut</texPath>
            <color>(127,27,27)</color>
        </graphicData>
        <statBases>
            <WorkTableEfficiencyFactor>2</WorkTableEfficiencyFactor>
        </statBases>
        <recipes>
            <li>WNA_RiteBeastDivision</li>
            <li>WNA_RiteRebelStriving</li>
            <li>WNA_RiteAbleting</li>
            <li MayRequire="sarg.rimbees">WNA_RecipeAlphaBees</li>
            <li MayRequire="sarg.rimbees">WNA_RecipeAlphaBeesToo</li>
            <li MayRequire="BreadMo.Cinders">WNA_ChopPolymer</li>
        </recipes>
    </ThingDef>

</Defs>