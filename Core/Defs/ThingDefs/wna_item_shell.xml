<?xml version="1.0" encoding="utf-8" ?>
<Defs>
    <ThingDef ParentName="WNA_ShellBase">
        <defName>WNA_ShellFlame</defName>
        <label>flame shell</label>
        <description>A shell made by dissolving phosphorus in chemfuel and store the mixture in a jar. This shell can be extremely dangerous, making both explosion and fire.</description>
        <graphicData>
            <texPath>item/wna_shells/flame</texPath>
            <graphicClass>Graphic_StackCount</graphicClass>
        </graphicData>
        <statBases>
            <MarketValue>2000</MarketValue>
        </statBases>
        <projectileWhenLoaded>WNA_ShellFlame_Proj</projectileWhenLoaded>
        <costList>
            <Chemfuel>5</Chemfuel>
            <WNA_Phosphorus>1</WNA_Phosphorus>
        </costList>
        <recipeMaker>
            <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
            <effectWorking>Cook</effectWorking>
            <soundWorking>Recipe_Machining</soundWorking>
            <workAmount>800</workAmount>
            <targetCountAdjustment>5</targetCountAdjustment>
            <workSkill>Crafting</workSkill>
            <bulkRecipeCount>10</bulkRecipeCount>
            <recipeUsers>
	            <li>FueledSmithy</li>
	            <li>ElectricSmithy</li>
	            <li>TableMachining</li>
            </recipeUsers>
            <skillRequirements>
                <Crafting>10</Crafting>
            </skillRequirements>
            <displayPriority>100</displayPriority>
        </recipeMaker>
    </ThingDef>
    <ThingDef ParentName="WNA_ProjBase">
        <defName>WNA_ShellFlame_Proj</defName>
        <label>flame shell</label>
        <graphicData>
            <texPath>Things/Projectile/ShellFirefoam</texPath>
            <color>(217,147,89)</color>
        </graphicData>
        <thingClass>Projectile_DoomsdayRocket</thingClass>
        <projectile>
            <damageDef>Flame</damageDef>
            <damageAmountBase>45</damageAmountBase>
            <stoppingPower>Infinity</stoppingPower>
            <speed>200</speed>
            <armorPenetrationBase>Infinity</armorPenetrationBase>
            <explosionRadius>7.9</explosionRadius>
            <preExplosionSpawnThingDef>Filth_Fuel</preExplosionSpawnThingDef>
            <preExplosionSpawnChance>0.34</preExplosionSpawnChance>
            <flyOverhead>true</flyOverhead>
            <soundHitThickRoof>Artillery_HitThickRoof</soundHitThickRoof>
            <soundExplode>Explosion_Vaporize</soundExplode>
            <soundImpactAnticipate>MortarRound_PreImpact</soundImpactAnticipate>
            <soundAmbient>MortarRound_Ambient</soundAmbient>
            <ai_IsIncendiary>true</ai_IsIncendiary>
        </projectile>
    </ThingDef>

    <ThingDef ParentName="WNA_ShellBase">
        <defName>WNA_ShellChiming</defName>
        <label>chiming shell</label>
        <description>A plasteel can containing an unstable chiming steel shard whose inner structure has been disrupted by external energy. When detonated this shell will unleash immense destructive power and blast a large area. It should be pointed out that this method of making use of chiming steel is really wasteful and inefficient as only 0% about its power is released.</description>
        <graphicData>
            <texPath>item/wna_shells/chiming</texPath>
            <graphicClass>Graphic_StackCount</graphicClass>
        </graphicData>
        <statBases>
            <MarketValue>2000</MarketValue>
        </statBases>
        <projectileWhenLoaded>WNA_ShellChiming_Proj</projectileWhenLoaded>
        <costList>
            <WNA_ChimingSteel>1</WNA_ChimingSteel>
            <Plasteel>75</Plasteel>
            <WNA_Focus>5</WNA_Focus>
        </costList>
        <recipeMaker>
            <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
            <effectWorking>Cook</effectWorking>
            <soundWorking>Recipe_Machining</soundWorking>
            <workAmount>800</workAmount>
            <targetCountAdjustment>5</targetCountAdjustment>
            <productCount>15</productCount>
            <workSkill>Crafting</workSkill>
            <recipeUsers>
	            <li>FueledSmithy</li>
	            <li>ElectricSmithy</li>
	            <li>TableMachining</li>
            </recipeUsers>
            <skillRequirements>
                <Crafting>10</Crafting>
            </skillRequirements>
            <displayPriority>100</displayPriority>
        </recipeMaker>
    </ThingDef>
    <ThingDef ParentName="WNA_ProjBase">
        <defName>WNA_ShellChiming_Proj</defName>
        <label>chiming shell</label>
        <graphicData>
            <texPath>Things/Projectile/ShellFirefoam</texPath>
            <color>(163,0,70)</color>
        </graphicData>
        <thingClass>Projectile_Explosive</thingClass>
        <projectile>
            <damageDef>WNA_ChimingBlaze</damageDef>
            <damageAmountBase>999999</damageAmountBase>
            <stoppingPower>Infinity</stoppingPower>
            <speed>2000</speed>
            <armorPenetrationBase>Infinity</armorPenetrationBase>
            <explosionRadius>199.9</explosionRadius>
            <flyOverhead>true</flyOverhead>
            <soundHitThickRoof>Artillery_HitThickRoof</soundHitThickRoof>
            <soundExplode>Explosion_Vaporize</soundExplode>
            <soundImpactAnticipate>MortarRound_PreImpact</soundImpactAnticipate>
            <soundAmbient>MortarRound_Ambient</soundAmbient>
        </projectile>
    </ThingDef>

</Defs>