<?xml version="1.0" encoding="utf-8" ?>
<Defs>
    <ThingDef ParentName="WNA_FurnitureBase">
        <defName>WNA_TrspShuttle</defName>
        <label>transport shuttle</label>
        <description>A transport shuttle.</description>
        <thingClass>Building_PassengerShuttle</thingClass>
        <passability>PassThroughOnly</passability>
        <fillPercent>1</fillPercent>
        <size>(3,5)</size>
        <drawHighlight>true</drawHighlight>
        <highlightColor>(168,167,151)</highlightColor>
        <uiIconScale>1</uiIconScale>
        <graphicData>
            <graphicClass>Graphic_Multi</graphicClass>
            <texPath>Things/Building/PassengerShuttle/PassengerShuttle</texPath>
            <shaderType>CutoutComplex</shaderType>
            <drawSize>(3,5)</drawSize>
            <color>(168,167,151)</color>
            <shadowData>
                <volume>(1.8, 1.0, 4.1)</volume>
                <offset>(-0.1, 0, 0)</offset>
            </shadowData>
        </graphicData>
        <statBases>
            <WorkToBuild>3600</WorkToBuild>
            <Mass>1</Mass>
            <Comfort>1</Comfort>
        </statBases>
        <costList>
            <ShuttleEngine>1</ShuttleEngine>
        </costList>
        <rotatable>true</rotatable>
        <defaultPlacingRot>East</defaultPlacingRot>
        <drawerType>RealtimeOnly</drawerType>
        <blockWind>true</blockWind>
        <building>
            <destroySound>BuildingDestroyed_Metal_Big</destroySound>
            <isInert>true</isInert>
            <expandHomeArea>false</expandHomeArea>
            <forcedCostLeavings>
                <li MayRequire="Ludeon.RimWorld.Odyssey">ShuttleEngine</li>
            </forcedCostLeavings>
        </building>
        <inspectorTabs>
            <li>ITab_ContentsTransporter</li>
        </inspectorTabs>
        <comps>
            <li Class="CompProperties_Shuttle">
                <shipDef>Ship_PassengerShuttle</shipDef>
            </li>
            <li Class="CompProperties_Launchable">
                <fuelPerTile>1</fuelPerTile>
                <minFuelCost>1</minFuelCost>
                <skyfallerLeaving>PassengerShuttleLeaving</skyfallerLeaving>
                <worldObjectDef>PassengerShuttle</worldObjectDef>
                <cooldownTicks>0</cooldownTicks> <!-- 1.5 hours -->
                <fixedLaunchDistanceMax>1500</fixedLaunchDistanceMax>
                <cooldownEndedMessage>{0} is ready to launch again.</cooldownEndedMessage>
            </li>
            <li Class="CompProperties_Transporter">
                <massCapacity>1000000</massCapacity>
                <max1PerGroup>true</max1PerGroup>
                <canChangeAssignedThingsAfterStarting>true</canChangeAssignedThingsAfterStarting>
                <pawnLoadedSound>Shuttle_PawnLoaded</pawnLoadedSound>
                <pawnExitSound>Shuttle_PawnExit</pawnExitSound>
                <showMassInInspectString>true</showMassInInspectString>
            </li>
            <li Class="CompProperties_Refuelable">
                <fuelCapacity>15000</fuelCapacity>
                <fuelMultiplier>600</fuelMultiplier>
                <targetFuelLevelConfigurable>true</targetFuelLevelConfigurable>
                <initialConfigurableTargetFuelLevel>15000</initialConfigurableTargetFuelLevel>
                <fuelFilter>
                    <thingDefs>
                        <li>Uranium</li>
                    </thingDefs>
                </fuelFilter>
                <fuelLabel>Uranium</fuelLabel>
                <fuelGizmoLabel>Uranium</fuelGizmoLabel>
                <consumeFuelOnlyWhenUsed>true</consumeFuelOnlyWhenUsed>
                <autoRefuelPercent>1</autoRefuelPercent>
                <showFuelGizmo>true</showFuelGizmo>
                <drawOutOfFuelOverlay>false</drawOutOfFuelOverlay>
                <showAllowAutoRefuelToggle>true</showAllowAutoRefuelToggle>
                <canEjectFuel>true</canEjectFuel>
            </li>
            <li Class="CompProperties_AmbientSound">
                <sound>ShuttleIdle_Ambience</sound>
            </li>
        </comps>
        <placeWorkers>
            <li>PlaceWorker_NotUnderRoof</li>
        </placeWorkers>
    </ThingDef>
    
    <ThingDef ParentName="WNA_FurnitureBase">
        <defName>WNA_TrspCargo</defName>
        <label>transport cargo</label>
        <description>A single-use transport cargo.</description>
        <passability>PassThroughOnly</passability>
        <fillPercent>0.5</fillPercent>
        <drawHighlight>true</drawHighlight>
        <highlightColor>(168,167,151)</highlightColor>
        <uiIconScale>1</uiIconScale>
        <graphicData>
            <graphicClass>Graphic_Single</graphicClass>
            <texPath>Things/Building/MechanoidRelay</texPath>
            <drawSize>(1,1)</drawSize>
        </graphicData>
        <statBases>
            <WorkToBuild>1000</WorkToBuild>
            <Mass>1</Mass>
        </statBases>
        <costList/>
        <rotatable>false</rotatable>
        <building>
            <expandHomeArea>false</expandHomeArea>
        </building>
        <inspectorTabs>
            <li>ITab_ContentsTransporter</li>
        </inspectorTabs>
        <comps>
            <li Class="CompProperties_Transporter">
                <massCapacity>1000000</massCapacity>
                <max1PerGroup>true</max1PerGroup>
                <canChangeAssignedThingsAfterStarting>true</canChangeAssignedThingsAfterStarting>
                <pawnLoadedSound>Shuttle_PawnLoaded</pawnLoadedSound>
                <pawnExitSound>Shuttle_PawnExit</pawnExitSound>
                <showMassInInspectString>true</showMassInInspectString>
                <restEffectiveness>1</restEffectiveness>
                <canChangeAssignedThingsAfterStarting>true</canChangeAssignedThingsAfterStarting>
            </li>
            <li Class="CompProperties_Launchable_TransportPod">
                <skyfallerLeaving>DropPodLeavingAncient</skyfallerLeaving>
                <requiresFuelingPort>false</requiresFuelingPort>
                <fixedLaunchDistanceMax>900</fixedLaunchDistanceMax>
            </li>
        </comps>
        <placeWorkers>
            <li>PlaceWorker_NotUnderRoof</li>
        </placeWorkers>
        <dropPodActive>ActiveDropPodAncient</dropPodActive>
        <dropPodFaller>DropPodIncomingAncient</dropPodFaller>
    </ThingDef>
</Defs>