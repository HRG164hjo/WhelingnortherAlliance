<?xml version="1.0" encoding="utf-8" ?>
<Patch>
    <Operation Class="PatchOperationAdd">
	    <xpath>Defs/FactionDef[defName="WNA_FactionWNA"]</xpath>
        <value>
            <disallowedRaidAgeRestrictions>
                <li>Children</li>
            </disallowedRaidAgeRestrictions>
        </value>
    </Operation>

    <!-- -->
    <Operation Class="PatchOperationAdd">
	    <xpath>Defs/GeneDef[defName="WNA_StillWater"]/disablesNeeds</xpath>
        <value>
            <li>Deathrest</li>
            <li>KillThirst</li>
        </value>
    </Operation>

    <!-- -->
    <Operation Class="PatchOperationAdd">
	    <xpath>Defs/ThingDef[defName="WNA_WNThan"]/comps</xpath>
        <value>
            <li Class="CompProperties_Effecter">
                <effecterDef>ApocrionAttached</effecterDef>
            </li>
        </value>
    </Operation>
    
    <Operation Class="PatchOperationAdd">
	    <xpath>Defs/ThingDef[@Name="LightMechanoid"]/butcherProducts</xpath>
        <value>
            <ChunkMechanoidSlag>1</ChunkMechanoidSlag>
        </value>
    </Operation>
    <Operation Class="PatchOperationAdd">
	    <xpath>Defs/ThingDef[@Name="HeavyMechanoid"]/butcherProducts</xpath>
        <value>
            <ChunkMechanoidSlag>3</ChunkMechanoidSlag>
        </value>
    </Operation>
    <Operation Class="PatchOperationAdd">
	    <xpath>Defs/ThingDef[@Name="SuperHeavyMechanoid"]/butcherProducts</xpath>
        <value>
            <ChunkMechanoidSlag>5</ChunkMechanoidSlag>
        </value>
    </Operation>

    <!-- -->
    <Operation Class="PatchOperationAdd">
	    <xpath>Defs/ThoughtDef[defName="EnvironmentDark"]/nullifyingGenes</xpath>
        <value>
            <li>WNA_ShadowRing</li>
            <li>WNA_StillWater</li>
        </value>
    </Operation>
    
    <!-- -->
    <Operation Class="PatchOperationAdd">
	    <xpath>Defs/TraderKindDef[@Name="WNA_TraderKindBase"]/stockGenerators</xpath>
        <value>
            <li Class="StockGenerator_SingleDef">
                <thingDef>Mechlink</thingDef>
                <price>VeryCheap</price>
                <countRange>200000~300000</countRange>
            </li>
            <li Class="StockGenerator_SingleDef">
                <thingDef>ArchiteCapsule</thingDef>
                <price>VeryCheap</price>
                <countRange>300000~500000</countRange>
            </li>
            <li Class="StockGenerator_SingleDef">
                <thingDef>DeathrestCapacitySerum</thingDef>
                <price>VeryCheap</price>
                <countRange>200000~300000</countRange>
            </li>
            <li Class="StockGenerator_SingleDef">
                <thingDef>PoluxSeed</thingDef>
                <price>VeryCheap</price>
                <countRange>100000~200000</countRange>
            </li>
        </value>
    </Operation>
    
</Patch>